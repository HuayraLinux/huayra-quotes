<h2>Resultado</h2>

{{#if working}}
  <p>Buscando ...</p>
{{else}}

  {{#if empty}}

    <p>Oh, no hay resultados... intentá con otra búsqueda.</p>

  {{else}}

    <ul class='buscar-content'>
      {{#each result as |page index|}}
        {{#if page.redirect}}
          <li>{{#link-to "show" page.redirect}}{{page.title}}{{/link-to}}</li>
        {{else}}
          <li>{{#link-to "show" page.id}}{{page.title}}{{/link-to}}</li>
        {{/if}}
      {{/each}}
    </ul>

  {{/if}}

{{/if}}
